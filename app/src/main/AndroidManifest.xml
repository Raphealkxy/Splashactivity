<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timmy.splashactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.Activity.SplashActivity">

        </activity>
        <activity
            android:name=".Activity.Activity.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 当前activity自启动一次 -->
        </activity>
        <activity android:name=".Activity.Activity.loginActivity" android:launchMode="singleTask">

        </activity>
    </application>

</manifest>