<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timmy.splashactivity.Activity.Activity.modify.modifyInfo">

    <include
        android:id="@+id/updateinfoTitlebar"
        layout="@layout/tittlebar"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/updateinfoTitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/update_num"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext"
            android:hint="输入新名称"
            android:inputType="text"
            android:padding="10dip"
            android:singleLine="true"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/update_telephone"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext"
            android:hint="输入新电话"
            android:inputType="text"
            android:padding="10dip"
            android:singleLine="true"
            android:textColorHint="#AAAAAA" />



        <EditText
            android:id="@+id/upadate_email"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext"
            android:hint="确认新邮箱"
            android:inputType="text"
            android:padding="10dip"
            android:singleLine="true"
            android:textColorHint="#AAAAAA" />

        <Button
            android:id="@+id/updateinfo_submit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/black"
            android:text="确认修改"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>
