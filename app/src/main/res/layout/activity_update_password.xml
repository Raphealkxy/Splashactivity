<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.timmy.splashactivity.Activity.Activity.modify.UpdatePassword">

    <include
        android:id="@+id/updatepasswordTitlebar"
        layout="@layout/tittlebar"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/updatepasswordTitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical" >

    <EditText
        android:id="@+id/oldpassword"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:hint="输入旧密码"
        android:inputType="textPassword"
        android:padding="10dip"
        android:singleLine="true"
        android:textColorHint="#AAAAAA" />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:padding="10dip"
        android:singleLine="true"
        android:textColorHint="#AAAAAA" />



    <EditText
        android:id="@+id/okpassword"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:hint="确认新密码"
        android:inputType="textPassword"
        android:padding="10dip"
        android:singleLine="true"
        android:textColorHint="#AAAAAA" />

        <Button
            android:id="@+id/updatepassword_submit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/black"
            android:text="确认修改"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>
